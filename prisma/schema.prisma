generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model PricingHistory {
  id              String   @id @default(cuid())
  shop            String
  productId       String
  variantId       String
  productTitle    String
  variantTitle    String
  actionType      String
  adjustmentValue Float
  oldPrice        Float
  newPrice        Float
  userEmail       String?
  createdAt       DateTime @default(now())

  @@index([shop])
  @@index([createdAt])
  @@index([createdAt], map: "idx_pricing_history_created_at")
  @@map("pricing_history")
}

model Subscription {
  id                     String    @id @default(cuid())
  shop                   String    @unique
  planName               String
  status                 String
  subscriptionId         String?
  currentPeriodEnd       DateTime?
  usageCount             Int       @default(0)
  usageLimit             Int       @default(20)
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt
  uniqueProductsModified  Json     @default("[]") @db.Json
  totalPriceChanges      Int?      @default(0)

  @@index([shop])
  @@map("subscriptions")
}

model ProductModification {
  id                 String   @id @default(cuid())
  shop               String
  productId          String
  productTitle       String
  subscriptionId     String
  modificationCount  Int      @default(1)
  firstModified      DateTime @default(now())
  lastModified       DateTime @updatedAt
  billingPeriodStart DateTime

  @@unique([shop, productId, billingPeriodStart], map: "unique_shop_product_period")
  @@index([billingPeriodStart], map: "idx_billing_period")
  @@index([shop], map: "idx_shop")
  @@map("product_modifications")
}
